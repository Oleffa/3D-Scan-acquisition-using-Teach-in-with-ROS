<launch>
  <!-- Load the configuration file -->
  <rosparam command="load" file="$(find volksbotRT)/launch/config/parameters.yaml" /> 

  <!--
  <rosparam param="use_sim_time">true</rosparam/>
  --> 
  
  <!-- AMCL localization variant
  -->

  <node name="map_server" pkg="map_server" type="map_server" args="/home/visionlab/workspace/oli/map.yaml"/>


  <!-- Run AMCL 
 -->
  <node pkg="amcl" type="amcl" name="amcl" args="scan:=/LMS">
    <rosparam file="$(find volksbotRT)/launch/config/amcl_diff_cfg.yaml" command="load"/>
  </node>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find volksbotRT)/launch/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find volksbotRT)/launch/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find volksbotRT)/launch/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find volksbotRT)/launch/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find volksbotRT)/launch/config/base_local_planner_params.yaml" command="load" />
  </node>
  

</launch>
